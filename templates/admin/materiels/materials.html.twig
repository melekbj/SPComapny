{% extends 'baseAdmin.html.twig' %}

{% block body %}
             <div class="main-panel">
             
        <div class="content-wrapper">
            <button type="button" class="btn btn-success mb-5" data-toggle="modal" data-target="#exampleModal">
            Add material +
            </button>
          <div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                  {{ message }}
                </div>
             {% endfor %}
      <div class="card-body">
        <h4 class="card-title">Les materiels</h4>
        <div class="table-responsive">

        <style>
            .block {
              flex: 0 0 33%;
              text-align: center;
              border: 1px solid #ccc;
              padding: 10px;
              margin: 1px; /* Add margin space */
            }

            .block img {
              max-width: 100%;
              height: auto;
            }

            .flex-container {
              display: flex;
              flex-wrap: wrap;
            }
          </style>

          <div class="flex-container">
            {% for item in materials %}
            <div class="block">
              
              {% if item.photo %}
                  <img src="{{ item.photo ? asset(vich_uploader_asset(item, 'imageFile')) : '' }}" width="100px" alt="photo">
              {% endif %}

              <div>{{ item.nom }}</div>
              <div>
              <a href="{{path('app_edit_material', {'id': item.id})}}" class="btn btn-success btn-sm">Edit</a>
              <a href="{{path('app_delete_material', {'id': item.id})}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this material?')">Delete</a>
              </div>
              {# <div class="mt-3">Country :  {{ item.pays.nom }}</div> #}
            </div>
            {% if loop.index is divisible by(3) %}
            <div style="clear:both;"></div>
            {% endif %}
            {% endfor %}
          </div>


        </div>
      </div>
    </div>
  </div>
</div>

        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
     
        <!-- partial -->
      </div>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter nouveau pays</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      {{ form_start(materialForm) }}
        {{ form_row(materialForm.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(materialForm.imageFile, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(materialForm.pu, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(materialForm.Add) }}
      {{ form_end(materialForm) }} 
      </div>
      {# <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div> #}
    </div>
  </div>
</div>
{% endblock %}