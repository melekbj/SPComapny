{% extends 'baseAdmin.html.twig' %}

{% block body %}
  <div class="main-panel">

    <div class="content-wrapper">
      <div>
        <h6 class="text-sm-right mr-3" style="font-size:12px;">
        <<a href="{{path('app_dashboard')}}">dashboard</a><<a href="{{path('app_country')}}">pays</a><<a href=""></a>banques
        </h6>
      </div>

      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            {% for message in app.flashes('success') %}
              <div class="alert alert-success">
                {{ message }}
              </div>
            {% endfor %}
            <div class="card-body">
              <h4 class="card-title">Banks in this country</h4>
              <div class="table-responsive">

                <style>
                  .block {
                    flex: 0 0 33%;
                    text-align: center;
                    border: 1px solid #ccc;
                    padding: 10px;
                    margin: 1px; /* Add margin space */
                  }

                  .block img {
                    max-width: 50%;
                    height: auto;
                  }

                  .flex-container {
                    display: flex;
                    flex-wrap: wrap;
                  }
                </style>

                <div class="flex-container">
                  {% for item in banks %}
                    <div class="block">
                      <a href="{{ path('app_commandes_by_bank', {'id': item.id}) }}">
                        <img src="{{ asset(vich_uploader_asset(item, 'imageFile')) }}" width="90px" alt="photo">
                        <div>
                          <h5 class=" text-capitalize text-center text-body text-behance ">{{ item.nom }}</h5>
                        </div>
                      </a>
                      {# <div class="mt-3">Country :  {{ item.pays.nom }}</div> #}
                      <div
                        class="mt-2">{# <a href="{{path('app_edit_banque', {'id': item.id})}}" class="btn btn-success btn-sm">Edit</a>
                                        <a href="{{path('app_delete_banque', {'id': item.id})}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this material?')">Delete</a> #}
                      </div>
                    </div>
                    {% if loop.index is divisible by(3) %}
                      <div style="clear:both;"></div>
                    {% endif %}
                  {% endfor %}
                </div</div>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!-- content-wrapper ends -->
      <!-- partial -->
    </div>


