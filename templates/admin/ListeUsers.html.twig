{% extends "baseAdmin.html.twig" %}



{% block body %}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="">

			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					<div class="card-body">
						<h4 class="card-title">liste des utilisateurs</h4>
						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>
											User photo
										</th>
										<th>
											User email
										</th>
										<th>
											User role
										</th>
										{% if app.user.getRoles()=='ROLE_ADMIN' %}
											<th>
												Actions
											</th>
										{% endif %}
									</tr>
								</thead>
								<tbody>
									{% for item in allUsers %}
										<tr>
											<td class="py-1">
												<img src="{{ asset(vich_uploader_asset(item, 'imageFile')) }}" alt="photo">
											</td>
											<td>
												{{item.email}}
											</td>
											<td>
												{{item.roles}}
											</td>
											{% if app.user.getRoles()=='ROLE_ADMIN' %}
												<td>
													<a href="{{path('app_edit_user', {'id': item.id})}}" class="btn btn-success btn-sm">Modifier</a>
													<a href="{{ path('app_block_user', {'id': item.id}) }}" class="btn btn-dark btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir bloquer cet utilisateur ?')">Bloquer</a>
													<a href="{{ path('app_approveU', {'id': item.id}) }}" class="btn btn-info btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir débloquer cet utilisateur ?')">Débloquer</a>
												</td>
											{% endif %}

										</tr>
									{% endfor %}
								</tbody>
							</table>


						</div>
					</div>
				</div>
			</div>

            <div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					<div class="card-body">
						<h4 class="card-title">Liste Des Supers Utilisateurs</h4>
						{# <p class="card-description">
						                    Add class <code>.table-striped</code>
						                  </p> #}
						<div class="table-responsive">
							  <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    User photo
                                </th>
								<th>
                                    User name
                                </th>
                                <th>
                                    User email
                                </th>
                                <th>
                                    User role
                                </th>
                                {% if app.user.getRoles()=='ROLE_ADMIN' %}
                                    <th>
                                        Actions
                                    </th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in users %}
                                <tr>
                                    <td class="py-1">
                                        <img src="{{ asset(vich_uploader_asset(item, 'imageFile')) }}" alt="photo">
                                    </td>
									<td>
                                        {{item.fullname}}
                                    </td>
                                    <td>
                                        {{item.email}}
                                    </td>
                                    <td>
                                        {{item.roles}}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_commandes_by_user', {'id': item.id}) }}" class="btn btn-primary btn-sm"><span class=" text-uppercase">Consulter Commandes</span></a>

                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>


						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>






{% endblock %}