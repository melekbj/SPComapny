{% extends 'baseAdmin.html.twig' %}

{% block body %}
      <div class="main-panel">

        <div class="content-wrapper">
          <button type="button" class="btn btn-success mb-5" data-toggle="modal" data-target="#exampleModal">
            AJOUTER BANQUE +
          </button>
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                {% for message in app.flashes('success') %}
                  <div class="alert alert-success">
                    {{ message }}
                  </div>
                {% endfor %}
                <div class="card-body">
                  <h4 class="card-title">Listes des banques</h4>
                  <div class="table-responsive">
                    <div class="flex-container">
                      {% for item in banks %}
                        <div class="block">
                          <img src="{{ asset(vich_uploader_asset(item, 'imageFile')) }}" width="60px" alt="photo">
                          <div>{{ item.nom }}</div>
                          <div class="mt-3">Country :
                            {{ item.pays.nom }}</div>
                          {% if app.user.getRoles()=='ROLE_ADMIN' or app.user.getRoles() == 'ROLE_SUPER_USER' %}
                            <div class="mt-2">
                              <a href="{{path('app_edit_banque', {'id': item.id})}}" class="btn btn-success btn-sm">Edit</a>
                              <a href="{{path('app_delete_banque', {'id': item.id})}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this material?')">Delete</a>
                            </div>
                          {% endif %}
                        </div>
                        {% if loop.index is divisible by(3) %}
                          <div style="clear:both;"></div>
                        {% endif %}
                      {% endfor %}
                    </div>


                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
        <!-- content-wrapper ends -->
      </div>


      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Ajouter nouveau pays</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
            {{ form_start(bankForm) }}
              {{ form_row(bankForm.nom, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(bankForm.imageFile, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(bankForm.pays, {'attr': {'class': 'form-control'}}) }}
              {{ form_row(bankForm.Add) }}
            {{ form_end(bankForm) }} 
            </div>
            {# <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div> #}
          </div>
        </div>
      </div>


      
{% endblock %}