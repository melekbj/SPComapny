{% extends "baseAdmin.html.twig" %}



{% block body %}

<div class="main-panel">
	<div class="content-wrapper">
		{% if app.user.getRoles()=="ROLE_SUPER_USER" %}
			<button type="button" class="btn btn-success mb-2 ml-3" data-toggle="modal" data-target="#exampleModal">
				Ajouter tresorie +
			</button>
		{% endif %}
			
		<div class="">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					<div class="card-body">
						<h4 class="card-title">Liste des tresories</h4>
						<h3 class="card-header bg-dark font-italic font-weight-bold text-capitalize text-center text-primary">{{pays.nom}}</h3>
						<div class="table-responsive">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th></th>
										<th></th>
										<th colspan="4" class=" font-italic text-capitalize text-center bg-secondary text-white">En cours</th>
										<th></th>
										<th></th>
										<th></th>
										<th></th>
									</tr>
									<tr>
										<th>
											Banque nom
										</th>
										<th>
											Solde réel
										</th>
										<th>
											Montant entrée
										</th>
										<th>
											Description entrée
										</th>
										<th>
											Montant sortie
										</th>
										<th>
											Description sortie
										</th>
										<th>
											Solde après mouvement
										</th>
										<th>
											Date
										</th>
										{# <th>
											User name
										</th> #}
										<th colspan="2" class=" text-center">
											Actions
										</th>
									</tr>
								</thead>
								<tbody>
								{% set sumAM = 0 %}
								{% set sumSR = 0 %}
									{% for item in tresories %}
										<tr>
											
											<td>
												{{item.banque.nom}}
											</td>
											
											<td>
												{{item.solder}}											
											</td>
											<td>
												{{item.entree}} <strong>{{item.deviseE}}</strong> 
											</td> 
											<td>
												{{item.descE}}
											</td>
											<td>
												{{item.sortie}} <strong>{{item.deviseS}}</strong> 
											</td>
											<td>
												{{item.descS}}
											</td>
											<td>
												{{ item.solder + item.entree - item.sortie }}
											</td>
											 <td>
												{{ item.date | date('d-m-Y') }}
											</td>

											{% set sumAM = sumAM + (item.solder + item.entree - item.sortie)  %}
											{% set sumSR = sumSR + item.solder %}
											{# <td>
												{{item.user.nom}}
											</td> #}
											{% if app.user.getRoles()=='ROLE_SUPER_USER' %}
												<td>
													<a href="{{path('app_edit_tresorie', {'id': item.id})}}" class="btn btn-success btn-sm">Modifier</a>
												</td>
											{% endif %}
											
												<td>
													<a href="{{path('app_show_bank_tresorie', {'id': item.id})}}" class="btn btn-info btn-sm">Historique</a>
												</td>


										</tr>
									{% endfor %}

									<tr>
										<th>Total</th>
										<td colspan="1">{{ sumSR }}</td>
										<td colspan="4"></td>
										<td>{{ sumAM }}</td>
										<td colspan="3"></td>
									</tr>

								</tbody>
							</table>


						</div>
					</div>
				</div>
			</div>








            
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Ajouter tresorie</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
            	{{ form_start(tresorieForm) }}
				{{ form_row(tresorieForm.solde_r) }}
				<div class="form-row">
					<div class=" col-md-9">
						{{ form_row(tresorieForm.entree) }}
					</div>
					<div class="col-md-3">
						{{ form_row(tresorieForm.deviseE) }}
					</div>
				</div>
				{{ form_row(tresorieForm.descE) }}
				<div class="form-row">
					<div class=" col-md-9">
						{{ form_row(tresorieForm.sortie) }}
					</div>
					<div class="col-md-3">
						{{ form_row(tresorieForm.deviseS) }}
					</div>
				</div>
				{{ form_row(tresorieForm.descS) }}
				{{ form_row(tresorieForm.banque) }}
				{{ form_row(tresorieForm.Add) }}

				{{ form_end(tresorieForm) }} 
			</div>
		</div>
	</div>
</div>










{% endblock %}