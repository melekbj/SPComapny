{% extends "baseAdmin.html.twig" %}



{% block body %}

<div class="main-panel">
        <div class="content-wrapper">
        {% if app.user.getRoles()=="ROLE_SUPER_USER" %}
        <button type="button" class="btn btn-success mb-2" data-toggle="modal" data-target="#exampleModal">
            Add country +
            </button>
        {% endif %}
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
              {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                  {{ message }}
                </div>
             {% endfor %}
                <div class="card-body">
                  <h4 class="card-title">list of countrys</h4>
                  {# <p class="card-description">
                    Add class <code>.table-striped</code>
                  </p> #}
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Country flag
                          </th>
                          <th>
                            Country name
                          </th>
                          {% if app.user.getRoles()=='ROLE_ADMIN' %}
                          <th>
                            Actions
                          </th>
                          {% endif %}
                        </tr>
                      </thead>
                      <tbody>
                      {% for item in etats %}
                        <tr>
                          <td class="py-1">
                            <img src="{{ asset(vich_uploader_asset(item, 'imageFile')) }}" alt="photo">
                          </td>
                          <td>
                            {{item.nom}}
                          </td>
                          {% if app.user.getRoles()=='ROLE_ADMIN' or app.user.getRoles()=='ROLE_SUPER_USER' %}
                            <td>
                                <a href="{{path('app_edit_country', {'id': item.id})}}" class="btn btn-success btn-sm">Edit</a>
                                <a href="{{ path('app_delete_country', {'id': item.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this country?')">Delete</a>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter nouveau pays</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      {{ form_start(etatForm) }}
        {{ form_row(etatForm.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(etatForm.imageFile, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(etatForm.Add) }}
      {{ form_end(etatForm) }} 
      </div>
      {# <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div> #}
    </div>
  </div>
</div>


{% endblock %}