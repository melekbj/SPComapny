{% extends "baseAdmin.html.twig" %}


{% block body %}

<div class="main-panel">
	<div class="content-wrapper">

        <div class="card ml-5 mb-3 col-lg-10">
			<div class="card-body col-lg-12">
				<form action="{{ path('app_liste_tr') }}" method="get" class="form-inline">
            <div class="form-group col-mx-8">
                <h5 class="mt-2">
                    <strong>Filtrer par :</strong>
                </h5>
            </div>

            <div class="form-group col-lg-2">
                <select name="pays" class="form-control col-lg-12">
                    <option value="">Tous les Pays</option>
                    {% for pays in paysWithBanques %}
                        <option value="{{ pays.id }}" {{ pays.id == selectedPaysId ? 'selected' : '' }}>{{ pays.nom }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-group col-lg-2">
                <select name="banque" class="form-control col-lg-12">
                    <option value="">Toutes les Banques</option>
                    {% if selectedPaysId %}
                        {% for banque in paysWithBanques|filter(p => p.id == selectedPaysId)|first.banques %}
                            <option value="{{ banque.id }}" {{ banque.id == selectedBanqueId ? 'selected' : '' }}>{{ banque.nom }}</option>
                        {% endfor %}
                    {% endif %}
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>
			</div>
		</div>
			
		<div class="">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					<div class="card-body">
						<div class="card-title text-center text-primary font-italic">
							<span style="font-size:23px;">Liste des tr√©soreries</span>
						</div>
							
						<div class="table-responsive">
							 <table class="table">
                                <thead>
                                    <tr>
                                        <th>Pays</th>
                                        {# <th>Num Banque</th> #}
                                        <th>Nom Banque</th>
                                        <th>Comptes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for paysWithBanque in paysWithBanques %}
                                        {% for banque in paysWithBanque.banques %}
                                            <tr>
                                                {% if loop.first %}
                                                    <td rowspan="{{ paysWithBanque.banques|length }}">{{ paysWithBanque.nom }}</td>
                                                {% endif %}
                                                {# <td>{{ banque.id }}</td> #}
                                                <td>{{ banque.nom }}</td>
                                                <td>
                                                    <ul>
                                                        {% for compte in banque.compte %}
                                                            <li><a href="{{ path('app_operations_by_comptes', {'id': compte.id}) }}">{{ compte.num }} (Solde: {{ compte.solde }})</a></li>
                                                        {% endfor %}
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endfor %}
                                </tbody>
                            </table>


						</div>
					</div>
				</div>
			</div>








            
		</div>
	</div>
</div>




{% endblock %}