{% extends "baseAdmin.html.twig" %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-3">
                <div class="card-header mt-3">
                    <h3 class="text-center">Ajouter une devise</h3>
                </div>
                <div class="card-body">
                    {{ form_start(deviseForm) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(deviseForm.nom, {'attr': {'class': 'form-control'}, 'label': 'Nom du devise'}) }}
                            </div>
                        </div>
                        {{ form_row(deviseForm.Add, {'attr': {'class': 'btn btn-success'}, 'label': 'Confirmer'}) }}
                    {{ form_end(deviseForm) }}


                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
