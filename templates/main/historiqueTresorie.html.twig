{% extends "baseAdmin.html.twig" %}



{% block body %}

<div class="main-panel">
	<div class="content-wrapper">
		<div class="">
			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					<div class="card-body">
						<h4 class="card-title">historique des tresories</h4>
						<h3 class="card-header font-italic font-weight-bold text-capitalize text-center text-primary"></h3>
						<div class="table-responsive">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>
											Banque nom
										</th>
										<th>
											Solde réel
										</th>
										<th>
											Montant entrée
										</th>
										<th>
											Montant sortie
										</th>
										<th>
											Solde après mouvement
										</th>
										<th>
											Date
										</th>
										<th>
											User name
										</th>
									</tr>
								</thead>
								<tbody>
								{% set sumAM = 0 %}
								{% set sumSR = 0 %}
									{% for item in bankHistory %}
										<tr>
											<td>
												{{item.banque.nom}}
											</td>
											<td>
												{{item.solder}}											
											</td>
											<td>
												{{item.entree}}
											</td>
											<td>
												{{item.sortie}}
											</td>
											<td>
												{{ item.solder + item.entree - item.sortie }}
											</td>
											<td>
												{{ item.updatedAt | date('d-m-Y H:i') }}
											</td>
											<td>
												{{ item.user.fullname }}
											</td>

											{% set sumAM = sumAM + (item.solder + item.entree - item.sortie)  %}
											{% set sumSR = sumSR + item.solder %}
										

										</tr>
									{% endfor %}

									<tr>
										<th>Total</th>
										<td colspan="1">{{ sumSR }}</td>
										<td colspan="2"></td>
										<td>{{ sumAM }}</td>
										<td colspan="2"></td>
									</tr>

								</tbody>
							</table>


						</div>
					</div>
				</div>
			</div>








            
		</div>
	</div>
</div>



{% endblock %}